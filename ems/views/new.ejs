<!DOCTYPE html>
<html lang="en">

  <!--Site Header Module-->
  <head>
    <%- include('header'); -%>
  </head>
    
  <body>
    <!--Navigation Bar-->
    <%- include('navbar'); -%>
    
   <!--Main Content-->
   <main role="main" class="container">
    <div class="jumbotron text-center">
       <h1>New Employee Page</h1>
       <p>EMS (Milestone 4): MongoDB Integration</p>
    </div>
  
    <!--Text Section-->
    <div class="container">
      <h2 class="text-primary"><%= message %></h2>
      <form method="post" action="/process">
          <div class="form-group">
              <label for="firstName">First Name:</label>
              <input name="firstName" type="text" id="firstName" name="firstName">
          </div>
          <div class="form-group">
              <label for="lasttName">Last Name:</label>
              <input name="lastName" type="text" id="lastName" name="lastName">
          </div>
          <div class="form-group">   

              <!-- CSRF token -->
              <input name="_csrf" value="<%= csrfToken %>" type="hidden">
              <button class="btn btn-primary float-right" type="submit">Submit</button>
          </div>
      </form>
  </div>
  </main>
    
  </body>
  
<!--Site Footer Module-->
</div>
<%- include ('footer'); -%>
</div>
</html>
